<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentMain"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/default_btn_height"
    android:layout_gravity="center_horizontal"
    android:animateLayoutChanges="true"
    android:background="@drawable/shape_custom_loading_button"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="false"
    android:visibility="visible">

    <!-- Button Text -->
    <TextView
        android:id="@+id/tv_loading_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/default_btn_size"
        android:visibility="visible"
        tools:text="@string/default_btn_text" />

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/default_btn_height"
        android:layout_height="@dimen/default_btn_height"
        android:layout_centerInParent="true"
        android:indeterminateTint="@android:color/white"
        android:visibility="gone"
        tools:visibility="gone" />

</RelativeLayout>